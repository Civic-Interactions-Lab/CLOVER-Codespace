{
  "name": "Novice Python (CLOVER)",
  "image": "mcr.microsoft.com/devcontainers/python:3.11", // small & quick
  "updateContentCommand": "pip3 install --no-cache-dir -U pip",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "ms-python.vscode-pylance",
        "capstone-team-2.tu-clover"
      ],
      "settings": {
        // General calm
        "telemetry.telemetryLevel": "off",
        "workbench.startupEditor": "none",
        "workbench.tips.enabled": false,
        "update.mode": "manual",
        "extensions.autoCheckUpdates": false,
        "extensions.autoUpdate": false,
        "extensions.ignoreRecommendations": true,

        // Hide distractions
        "workbench.statusBar.visible": true,
        "workbench.activityBar.location": "top",  // keeps it small & simple
        "breadcrumbs.enabled": false,
        "editor.minimap.enabled": false,
        "explorer.openEditors.visible": 0,
        "scm.defaultViewMode": "list",
        "scm.showIncomingChanges": false,

        // Python: make Run button and execution “just work”
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.autoImportCompletions": false,
        "python.showStartPage": false,
        "python.createEnvironment.prompt": false,
        "python.terminal.activateEnvironment": false,
        "python.testing.pytestEnabled": false,
        "python.languageServer": "Default",
        "jupyter.logging.level": "error",

        // Keep sidebar focused on Explorer by default
        "workbench.view.alwaysShowHeaderActions": false
      }
    }
  },
  "features": {},

  // Speed: don't pull heavy tooling
  "postCreateCommand": "echo Ready",

  // Codespaces perf knobs
  "hostRequirements": { "cpus": 2, "memory": "4gb" }
}
