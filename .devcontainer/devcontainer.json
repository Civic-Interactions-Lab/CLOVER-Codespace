{
  "name": "Novice Python (CLOVER)",
  "image": "mcr.microsoft.com/devcontainers/python:3.11", // small & quick
  "updateContentCommand": "pip3 install --no-cache-dir -U pip",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "ms-python.vscode-pylance",
        "capstone-team-2.tu-clover"
      ],
      "settings": {
        // General calm
        "telemetry.telemetryLevel": "off",
        "workbench.startupEditor": "none",
        "workbench.tips.enabled": false,
        "update.mode": "manual",
        "extensions.autoCheckUpdates": false,
        "extensions.autoUpdate": false,
        "extensions.ignoreRecommendations": true,

        // Hide distractions
        "workbench.statusBar.visible": true,
        "workbench.activityBar.location": "top",  // keeps it small & simple
        "breadcrumbs.enabled": false,
        "editor.minimap.enabled": false,
        "explorer.openEditors.visible": 0,
        "scm.defaultViewMode": "list",
        "scm.showIncomingChanges": false,

        // Python: make Run button and execution “just work”
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.autoImportCompletions": false,
        "python.showStartPage": false,
        "python.createEnvironment.prompt": false,
        "python.terminal.activateEnvironment": false,
        "python.testing.pytestEnabled": false,
        "python.languageServer": "Default",
        "jupyter.logging.level": "error",
        // Keep sidebar focused on Explorer by default
        "workbench.view.alwaysShowHeaderActions": false,

        // Comprehensive AI assistant blocking
        "github.copilot.enable": {
          "*": false,
          "plaintext": false,
          "markdown": false,
          "scminput": false,
          "python": false
        },
        "github.copilot.inlineSuggest.enable": false,
        "github.copilot.chat.enable": false,
        "editor.inlineSuggest.enabled": false,
        "editor.suggest.showInlineCompletions": false,

        // Hide all Copilot UI elements completely
        "github.copilot.editor.enableAutoCompletions": false,
        "github.copilot.editor.enableCodeActions": false,
        "github.copilot.advanced": {
          "authProvider": "",
          "debug.showScores": false,
          "debug.overrideEngine": "",
          "debug.overrideProxyUrl": "",
          "debug.testOverrideProxyUrl": "",
          "debug.filterLogCategories": []
        },
        "github.copilot.chat.welcomeMessage": "never",
        "github.copilot.chat.localeOverride": "",
        "github.copilot.renameSuggestions.triggerAutomatically": false,

        // Hide status bar items and notifications
        "github.copilot.statusBarItem": false,
        "workbench.statusBar.feedback.visible": false,
        "extensions.autoCheckUpdates": false,
        "extensions.autoUpdate": false,
        "extensions.showRecommendationsOnlyOnDemand": true,
        "workbench.welcomePage.walkthroughs.openOnInstall": false,
        "workbench.startupEditor": "none",

        // Block other potential AI assistants
        "tabnine.disable_auto_update": true,
        "tabnine.binary_notification": false,
        "codeium.enableCodeLens": false,
        "codeium.enableConfig": false,
        "vsintellicode.modify.editor.suggestSelection": "off",

        // Additional suggestion blocking
        "editor.quickSuggestions": {
          "other": false,
          "comments": false,
          "strings": false
        }
      }
    }
  },
  "features": {},

  // Simplified and logged post-create command
  "postCreateCommand": "bash .devcontainer/post-create.sh > /tmp/post-create.log 2>&1",

  // Command to run after attaching to the container
  "postAttachCommand": "bash .devcontainer/hide-copilot.sh > /tmp/hide-copilot.log 2>&1",

  // Codespaces perf knobs
  "hostRequirements": { "cpus": 2, "memory": "4gb" }
}
