{
  // Keep the UI sparse
  "workbench.editor.showTabs": "multiple",          // students can switch files easily
  "workbench.panel.defaultLocation": "right", // panels out of the way
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.enablePersistentSessions": false,
  "git.enabled": false,                       // hide Git for the study
  "problems.showCurrentInStatus": false,

  // Editor comfort
  "editor.fontSize": 14,
  "editor.suggest.showWords": true,
  "editor.quickSuggestions": {
    "comments": "off",
    "strings": "off",
    "other": "off"
  },
  "editor.parameterHints.enabled": false,
  "editor.hover.enabled": false,
  "editor.codeActionsOnSave": {},

  // Python: ensure Run button always visible & simple
  "debug.python.debugJustMyCode": true,

  // Comprehensive GitHub Copilot blocking and UI hiding
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "python": false,
    "json": false,
    "jsonc": false
  },
  "github.copilot.inlineSuggest.enable": false,
  "github.copilot.chat.enable": false,
  "github.copilot.advanced": {},
  "editor.inlineSuggest.enabled": false,
  "editor.suggest.showInlineCompletions": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.tabCompletion": "off",
  "editor.wordBasedSuggestions": "off",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "extensions.ignoreRecommendations": true,

  // Additional Copilot UI hiding settings
  "github.copilot.editor.enableAutoCompletions": false,
  "github.copilot.editor.enableCodeActions": false,
  "github.copilot.chat.welcomeMessage": "never",
  "github.copilot.renameSuggestions.triggerAutomatically": false,
  "github.copilot.statusBarItem": false,

  // Hide all extension notifications and setup prompts
  "workbench.statusBar.feedback.visible": false,
   "extensions.showRecommendationsOnlyOnDemand": true,
  "workbench.welcomePage.walkthroughs.openOnInstall": false,
  "notifications.showExtensionsRecommendations": false,
  "workbench.settings.enableNaturalLanguageSearch": false,

  // Hide status bar items that might show Copilot
  "workbench.statusBar.visible": true,
  "workbench.editor.enablePreview": false,

  // Hide chat/copilot setup completely
  "chat.setupHidden": true,
  "workbench.welcomePage.experimental.extensionContributions": false,
  "workbench.activityBar.iconClickBehavior": "focus",

  // Git/GitHub UI minimization
  "git.autofetch": false,
  "git.decorations.enabled": false,
  "git.countBadge": "off",
  "explorer.decorations.colors": false,
  "explorer.decorations.badges": false,

  // Testing UI minimization
  "testing.defaultGutterEnabled": false,
  "testing.automaticallyOpenPeekView": "never",
  "testing.openTesting": "never",

  // Hide remaining Git/SCM surfaces
  "scm.diffDecorations": "none",
  "scm.countBadge": "off",
  "git.showStatusBarSyncIcon": false,
  "timeline.excludeSources": [
    "git"
  ],
  "workbench.activityBar.location": "hidden",
  "testing.automaticallyOpenTestResults": "never",

  // Hide dotfiles from Explorer, Search, and file watchers
  "files.exclude": {
    "**/.*": true
  },
  "search.exclude": {
    "**/.*": true
  },
  "files.watcherExclude": {
    "**/.*": true
  }
}
